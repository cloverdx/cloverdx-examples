<attr name="generate"><![CDATA[//#CTL2

// Generates output record.
function integer generate() {
	$out.0.paymentId = randomLong(1,999999999999l);
	$out.0.orderId = randomLong(1,999999999999l);
	$out.0.customerId = randomLong(1,999999);
	$out.0.paymentType = random() < 0.1 ? "CASH" : "CARD";
	$out.0.paidAmount = random() * 99999;
	$out.0.paymentDate = randomDate(today().dateAdd(-2,year),today());

	return ALL;
}

